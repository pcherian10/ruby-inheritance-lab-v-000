#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

some_knowledge = avi.teach
other_knowledge = avi.teach

steve.learn(some_knowledge)
steve.learn(other_knowledge)

puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Parsons"
jim.learn #learn is not defined in user and is exlusive to student and teacher, so it's not there.


paul = Student.new
paul.first_name = "Paul"
paul.last_name = "Cherian"

more_knowledge = avi.teach

paul.learn(more_knowledge)

puts "Paul just learned this important knowledge: '#{paul.knowledge.first}' from Avi"
